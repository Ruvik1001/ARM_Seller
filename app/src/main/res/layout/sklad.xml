<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".SkladActivity">

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/menu_bar_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:id="@+id/menu_bar_horizontal_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/menu_bar_liner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/menu_bar_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marginLR"
                        android:text="@string/menu_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />

                    <TextView
                        android:id="@+id/menu_bar_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marginLR"
                        android:text="@string/menu_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1"
                        />

                    <TextView
                        android:id="@+id/menu_bar_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marginLR"
                        android:text="@string/menu_3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />

                    <TextView
                        android:id="@+id/menu_bar_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marginLR"
                        android:text="@string/menu_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />

                    <TextView
                        android:id="@+id/menu_bar_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/marginLR"
                        android:text="@string/menu_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:divider="@drawable/empty_tall_divider"
            android:showDividers="middle"
            android:layout_marginTop="@dimen/marginLoginBefore">

            <TableRow
                android:id="@+id/instr_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/instrumenty" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Инструменты"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:id="@+id/kraski_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/kraski_1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Краски"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:id="@+id/napol_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/napolnye_pokrytiya" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Напольные покрытия"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:id="@+id/plitk_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/plitka" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Плитка"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:id="@+id/skoby_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/skobyanye_izdeliya" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Скобяные изделия"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:id="@+id/pilo_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/stolyarnye_izdeliya" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Пиломатериалы"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:id="@+id/stroy_btn"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="70dp"
                android:divider="@drawable/empty_tall_divider"
                android:background="#D08AC7FB">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/stroymaterialy" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginLoginBefore"
                    android:layout_weight="1"
                    android:text="Строительные материалы"
                    android:textColor="@color/black"/>
            </TableRow>


        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>