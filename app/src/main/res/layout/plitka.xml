<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlitkaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <EditText
            android:id="@+id/search_bar_plitka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/sbtn_plitka"
            android:text="Введите искомый товар (напр. Кирпич)"
            android:textSize="@dimen/h2" />

        <Button
            android:id="@+id/sbtn_plitka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:backgroundTint="@color/btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Поиск"
            android:textSize="12dp"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_plitka"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/search_bar_plitka"
            android:layout_marginTop="10dp"
            app:dividerColor="@color/btn"/>

        <ListView
            android:id="@+id/lvs_plitka"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/div_plitka"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>